<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/constraint_image1"
        style="@style/Item.00"
        app:layout_constraintTop_toTopOf="@+id/constraint_layout"/>

    <ImageView
        android:id="@+id/relative_image2"
        style="@style/Item.01"
        app:layout_constraintLeft_toRightOf="@+id/constraint_image1"
        app:layout_constraintTop_toTopOf="@+id/constraint_layout"/>

    <ImageView
        android:id="@+id/relative_image4"
        style="@style/Item.02"
        app:layout_constraintLeft_toRightOf="@+id/relative_image2"
        app:layout_constraintTop_toTopOf="@+id/constraint_layout"/>

    <ImageView
        android:id="@+id/constraint_image4"
        style="@style/Item.10"
        app:layout_constraintBottom_toBottomOf="@+id/constraint_layout"
        app:layout_constraintTop_toBottomOf="@+id/constraint_image1"/>

    <ImageView
        android:id="@+id/constraint_image5"
        style="@style/Item.11"
        app:layout_constraintBottom_toBottomOf="@+id/constraint_layout"
        app:layout_constraintLeft_toRightOf="@+id/constraint_image4"/>

    <ImageView
        android:id="@+id/constraint_image6"
        style="@style/Item.12"
        app:layout_constraintBottom_toBottomOf="@+id/constraint_layout"
        app:layout_constraintLeft_toRightOf="@+id/constraint_image5"/>

</android.support.constraint.ConstraintLayout>